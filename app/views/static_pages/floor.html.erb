  <body>
    <%= render 'layouts/navbar' %>

    <div class="container">

    	<!-- Main component -->
    	<div class="jumbotron">
		
			<!-- For Map View -->
			<div class="text-center">
			<%= image_tag("Floors/Olsen/1st.png", class: "img-responsive", usemap: "#olsen1stfloor") %>
				
				<map name="olsen1stfloor">
